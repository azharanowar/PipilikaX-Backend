# Prevent directory listing
Options -Indexes

# Enable URL rewriting
RewriteEngine On
RewriteBase /PipilikaX-Backend/

# Custom 404 error page
ErrorDocument 404 /PipilikaX-Backend/404.php

# Blog post pretty URLs - match any characters, let blog.php validate
RewriteRule ^blog/(.+)$ blog.php?slug=$1 [L,QSA]

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Security headers
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Protect config and includes directories
<FilesMatch "\.(php|inc|tpl)$">
    <If "%{REQUEST_URI} =~ m#/(config|includes)/#">
        Require all denied
    </If>
</FilesMatch>
